<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comicsLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:padding="@dimen/margin"
    android:gravity="center"
    android:scrollbars="vertical"
    >

    <ru.kvisaz.bashreader.image.ResizableImageView
        android:id="@+id/comicsImageView"
        android:gravity="center_horizontal"
        android:layout_gravity="fill_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_weight="0.9"
        android:src="@drawable/comics_placeholder"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/comicsAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorTextBase"
        android:text="Hello it`s Comics Page"
        android:layout_weight="0.1"
        />

</LinearLayout>